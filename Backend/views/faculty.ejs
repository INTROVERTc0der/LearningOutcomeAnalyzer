                </div>
            </div>
        </div>
    </nav>
    <main class="container ">
        <div class="container">
            <div class="row">
                <div class="col-6 offset-3 mb-3">
                    <h1 class="text-center mt-5">Welcome <%= faculty.name %>!!!</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <h2 class="mb-3">Please fill the below form to distribute feedback form</h2>
                    <form action="/api/v1/faculty_user/distributeForms/<%= faculty._id %>" method="POST">
                        <div class="mb-3">
                            <select class="form-select" aria-label="Default select example" name="batch">
                                <option selected>Please select the batch</option>
                                <option value="Y20">Y20</option>
                                <option value="Y21">Y21</option>
                                <option value="Y22">Y22</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <select class="form-select" aria-label="Default select example" name="f_type">
                                <option selected>Please select the type of feedback form to be distributed</option>
                                <option value="workshop">Workshop</option>
                                <option value="industrialvisit">Industrial Visit</option>
                                <option value="internship">Internship</option>
                                <option value="course">Course</option>
                            </select>
                        </div>
                        <div class="mb-3">

                            <textarea class="form-control" placeholder="Please add a description of the form"
                                id="floatingTextarea2" style="height: 100px" name="f_name"></textarea>
                            <label for="floatingTextarea2" class="form-label">Form Name</label>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success w-100">Distribute Form</button>
                        </div>
                    </form>
                </div>
                <div class="col-6">
                    <div class="row">
                        <div class="col-6">
                            <h2 class="mb-3">View Results</h2>
                            <% for(let form of faculty.form_issued) { %>
                                <p>
                                    <span><a href="/api/v1/forms/viewResult/<%= form._id %>" class="link-info">
                                            <%= form.f_name %>
                                        </a>
                                    </span>
                                </p>
                                <% } %>
                        </div>
                        <div class="col-6">
                            <h2 class="mb-3">Responses</h2>
                            <% for(let form of faculty.form_issued) { %>
                                <p>
                                    <span>
                                        <%= form.responses.length %>
                                    </span>
                                </p>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="footer bg-dark py-3 mt-auto">
        <div class="container">
            <span class="text-muted">&copy; Learning Outcome Analyzer</span>
        </div>
    </footer>
